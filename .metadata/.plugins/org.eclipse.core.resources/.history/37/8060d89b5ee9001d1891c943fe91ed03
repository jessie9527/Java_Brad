package tw.org.iii.myclasses;

import java.awt.Color;
import java.awt.Graphics;
import java.awt.Graphics2D;
import java.awt.image.BufferedImage;
import java.io.File;
import java.io.IOException;
import java.util.Timer;
import java.util.TimerTask;

import javax.imageio.ImageIO;
import javax.swing.JPanel;

public class MyPanel extends JPanel{
	private BufferedImage ball;
	private Timer timer;
	private int ballX, ballY, viewW, viewH, dx, dy;
	
	public MyPanel() {
		setBackground(Color.YELLOW);
		
		try {
			ball = ImageIO.read(new File("dir2/ball.png"));
		} catch (IOException e) {
			System.out.println(e);
		}
		
		ballX = ballY = 100;
		dx = dy = 2;
		timer = new Timer();
		timer.schedule(new BallTask(), 1000, 16);
		System.out.println(getWidth() + ";" + getHeight());
	}
	
	@Override
	protected void paintComponent(Graphics g) {
		super.paintComponent(g);
		viewW = getWidth();
		viewH = getHeight();
		
		Graphics2D g2d = (Graphics2D)g;
		g2d.drawImage(ball, ballX, ballY, null);
	}
	
	private class BallTask extends TimerTask {
		@Override
		public void run() {
			// 判斷是否撞到牆壁
			if (ballX <= 0 || ballX + 64 >= viewW) {
				dx *= -1;
			}
			if (ballY <= 0 || ballY + 64 >= viewH) {
				dy *= -1;
			}
			ballX += dx;		
			ballY += dy;
			repaint();
		}
	}
	
}
