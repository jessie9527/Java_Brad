public class Bard09 {

	public static void main(String[] args) {
		int year = 2023;
		boolean isLeap;
		if (year % 4 == 0) {
			if (year % 100 == 0) {
				if (year % 400 == 0) {
					//閏
					isLeap = true;
				} else {
					//平
					isLeap = false;
				}
			} else {
				//閏
				isLeap = ture;
			}
		} else {
			//平
			isLeap = false;
		}
		System.out.println("%d年為%s", year, (isLeap?"閏":"平"));
	}

}
